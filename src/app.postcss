@tailwind base;
@tailwind components;
@tailwind utilities;

/* 
POTENTIAL THEMES
https://www.realtimecolors.com/blog-post?colors=f8f2ec-161008-d7ba93-2b6973-605cc1&fonts=Popp-Poppins
